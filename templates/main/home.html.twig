    <article id="articleRecherche">
        <h3>Filtrer les sorties</h3>
        <label for="selectCampus">Campus</label>
        <select name="selectCampus" id="selectCampus">
            {% for campu in campus %}
            <option value="{{ campu.id }}">{{ campu.nom }}</option>
