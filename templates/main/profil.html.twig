{% extends 'base.html.twig' %}

{% block title %}
    {{ participant.pseudo }}  | {{ parent() }}
{% endblock %}

{% block main %}
    <h2>{{ participant.pseudo }}</h2>
    <br>
    <article class="profil">


        <img id="photoProfil" src="{{ asset('uploads/photos/' ~ participant.photoFilename) }}" alt="la photo de {{ participant.pseudo }}">



    <table>
        <tr>
            <td>Prénom:</td>
            <td>{{ participant.prenom }}</td>
        </tr>
        <tr>
            <td>Nom:</td>
            <td>{{ participant.nom }}</td>
        </tr>
        <tr>
            <td>Téléphone:</td>
            <td>{{ participant.telephone }}</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>{{ participant.email }}</td>
        </tr>
        <tr>
            <td>Campus:</td>
            <td>{{ participant.campus.nom }}</td>
        </tr>
    </table>
    </article>
    <br>
    <div class = "boutonModifier">
    <a href="{{ path('main_monProfil',{"id":app.user.id}) }}"> Modifier </a>
    </div>
    <button onclick="{{ path('main_home') }}">Retour</button>
{% endblock %}

