{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block main %}
    <div class="profil">
         <h2>Mon profil</h2>

        {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}

        {{ form_row(form.pseudo) }}

        {{ form_row(form.telephone) }}

        {{ form_row(form.password, {'attr':{'value': '', 'type': 'password'}}) }}
        <div id="mailCache">
        {{ form_row(form.email, {'attr':{'class': 'HiddenType'}}) }}
        </div>
        <label for="pass">Confirmation:</label>
        <input id="pass" type="password">
        {{ form_row(form.campus) }}
        {{ form_row(form.photo) }}

        <div class="profilForm">
            <button type="submit" class="btn">Enregistrer</button>
            <button type="submit" class="btn"><a href="{{ path('main_home') }}">Annuler</a></button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

