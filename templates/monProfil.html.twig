{% extends 'base.html.twig' %}

{% block title %}
<h2>Mon profil</h2>
{% endblock %}

{% block main %}
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}

    {{ form_row(form.pseudo) }}

    {{ form_row(form.telephone) }}

    {{ form_row(form.password, {'attr':{'value': ''}}) }}
    {{ form_row(form.email, {'attr':{'class': 'HiddenType'}}) }}
    <label for="pass">Confirmation:</label>
    <input id="pass" type="password">
    {{ form_row(form.campus) }}
    <input type="file">



    <button type="submit" class="btn">Enregistrer</button>
    <a href="{{ path('main_home') }}">Accueil</a>
    {{ form_end(form) }}
{% endblock %}

